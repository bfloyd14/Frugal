<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<main>
<h1><%= title %></h1>
<% if (user){ %>
<h2><%= user.profile.name %>'s frugal</h2>
<% } %>


<table id="index-budget">
  <thead>
    <tr>
      <th>Name</th>
      <th>Amount</th>
      <th>Month</th>
      <th>Purpose</th>
      <th>Details</th>
      <th>Delete Budget</th>
    </tr>
  </thead>
  <tbody>
    <% budgets.forEach(budget => { %>
      <tr>
        <td><%= budget.name %></td>
        <td>$<%= budget.income.toLocaleString() %></td>
        <td><%= budget.month %></td>
        <td><%= budget.purpose %></td>
        <td><a href="/budgets/<%= budget._id %>"><button>Details</button></a></td>
        <td>
          <form action="/budgets/<%= budget._id %>?_method=DELETE" method="POST">
          <button class="btn" type="submit">Delete Budget</button>
          </form>
        </td>
      </tr>
  </tbody>
  <% }) %>
</main>

<%- include('../partials/footer') %>
