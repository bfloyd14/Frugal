<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<main>
<h1><%= title %></h1>
<% if (user){ %>
<h2><%= user.profile.name %>'s frugal</h2>
<% } %>
<table id="your-budget">
  <thead>
    <tr>
      <th>Name</th>
      <th>Date Created</th>
      <th>Purpose</th>
      <th>Details</th>
      <th>Delete Budget</th>
    </tr>
  </thead>
  <tbody>
    <% budgets.forEach(budgets => { %>
      <tr>
        <td><%= budgets.name %></td>
        <td><%= budgets.timestamps %></td>
        <td><%= budgets.purpose %></td>
          <button>Details</button>
          <button type="submit">Delete Budget</button>
      </tr>
    <% }) %>
  </tbody>

</main>



<%- include('../partials/footer') %>
